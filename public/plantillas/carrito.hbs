{{#if carrito.length }}
    <button class="btn btn__cerrarCarrito" onclick="carritoController.btnCerrarCarrito()"><i class="fas fa-times-circle"></i></button>
 
    <h3>Tu carrito:</h3>

    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>${{precioTotal}}</td>
            <td>{{marca}}</td>
            <td>
                <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}
            
            <td>
                <button onclick="carritoController.borrarProductoCarrito('{{id}}')" class="btn btn__borrarDelCarrito">X</button>
            </td>
        </tr>
         {{/each}}
    </table>
    <h3 class="total"></h3>
    <h3 class="total"></h3>

    <div class="btn btn-carrito">
        <button class="btn btn__vaciarCarrito" onclick="carritoController.btnVaciarCarrito()" >Vaciar carrito</button>
        <button class="btn btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Continuar compra <img src="../img/svg/send_icon.svg" alt="Icono enviar carrito"></button>
    </div>
{{else}}
    <button class="btn btn__cerrarCarrito" onclick="carritoController.btnCerrarCarrito()"><i class="fas fa-times-circle"></i></button>
    <h2>Oh no! <img src="../img/svg/carita_triste_icon.svg" alt="Icono carita triste"> </h2>
    <h3>Parece que tu carrito esta vacío, ve a agregar productos </h3>
 
{{/if}}